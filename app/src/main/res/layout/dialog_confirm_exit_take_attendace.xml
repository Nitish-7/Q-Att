<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/add_students_roll_no"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="5dp"
        android:padding="10dp"
        android:orientation="vertical"
        tools:context=".ClassesPackage.ClassesEditorActivity"
        tools:ignore="MissingConstraints">

        <!-- Overview category -->
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ProgressBar
                android:indeterminateTint="@color/red_theme_color"
                android:id="@+id/dialog_progress_bar"
                android:layout_gravity="center"
                android:padding="20dp"
                android:visibility="gone"
                android:layout_width="90dp"
                android:layout_height="90dp"/>
            <ImageView
                android:id="@+id/dialog_iv"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/ic_empty_attendance" />

        </LinearLayout>

        <TextView
            android:id="@+id/dialog_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/entry_fields_margin_horizontal"
            android:layout_marginBottom="15dp"
            android:textAlignment="center"
            android:text="@string/text_dialog_confirm_back_from_attendance_activity"
            android:textColor="@color/offblack"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_yes_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_bg"
                android:backgroundTint="@color/red_theme_color"
                android:text="yes"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialog_no_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/button_bg"
                android:backgroundTint="@color/white"
                android:text="no"
                android:textColor="@color/red_theme_color"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>


</FrameLayout>