<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/emailVerificationScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="visible"
        tools:context=".SignInActivity">

        <TextView
            android:id="@+id/emailVerifyAccountHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="30dp"
            android:text="A verification E-mail has been sent to your Account"
            android:textColor="@color/red_theme_color"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_question_mark_in_email_verification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:inputType="textEmailAddress"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailVerifyAccountHeading">

            <TextView
                android:id="@+id/tv_question_mark_in_email_verification"
                android:textSize="10sp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:textColor="@color/offblack"
                android:text="open gmail app and click on the verification link and return back to app"
                android:textColorHint="@color/black"
                android:textAlignment="textEnd"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:ignore="RtlCompat" />
            <ImageView
                android:id="@+id/ic_question_mark_in_email_verification"
                android:layout_width="28dp"
                android:padding="4dp"
                android:background="@drawable/grey_per"
                android:layout_height="28dp"
                android:layout_margin="@dimen/entry_fields_margin"
                app:srcCompat="@drawable/ic_question_mark" />

        </androidx.appcompat.widget.LinearLayoutCompat>



        <Button
            android:id="@+id/btnNextAfterVerifyEmail"
            style="@style/LoginButtonStyle"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="20dp"
            android:text="next"
            android:clickable="false"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>