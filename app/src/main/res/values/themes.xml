<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyAppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_theme_color</item>
        <item name="colorPrimaryVariant">@color/red_theme_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@drawable/loading_screen</item>
        <item name="android:editTextBackground">@null</item>
        <item name="actionModeBackground">@color/red_theme_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_theme2</item>
        <item name="colorSecondaryVariant">@color/red_theme_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <color name="red_theme2">#FC6D6D</color>
</resources>