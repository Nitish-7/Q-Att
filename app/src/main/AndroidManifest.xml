<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.android.quickAttendance">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:requestLegacyExternalStorage="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fireone">
        <activity
            android:name=".StudentsPackage.StudentsAndAttendanceActivity"
            android:exported="false" />
        <activity
            android:name=".StudentsPackage.AttendanceRecordActivity"
            android:exported="false" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".StudentsPackage.StudentsEditorActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar.ClassesEditorTheme" />
        <activity
            android:name=".StudentsPackage.StudentsActivity"
            android:label="Students" />
        <activity android:name=".SplashScreenActivity" />
        <activity
            android:name=".ClassesPackage.ClassesEditorActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar.ClassesEditorTheme" />
        <activity
            android:name=".ClassesPackage.ClassesActivity"
            android:exported="true"
            android:label="@string/title_activity_classes" />
        <activity
            android:name=".SignInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TakeAttendancePackage.TakeAttendanceActivity"
            android:label="Take Attendance" />
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_path"/>
        </provider>
    </application>

</manifest>